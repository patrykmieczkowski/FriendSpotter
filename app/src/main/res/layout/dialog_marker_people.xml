<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/marker_people_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        tools:text="Anakonda" />

    <TextView
        android:id="@+id/marker_people_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/marker_people_username"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:gravity="start"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="Still" />

    <TextView
        android:id="@+id/marker_people_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/marker_people_activity"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="150dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="50 m" />

</RelativeLayout>